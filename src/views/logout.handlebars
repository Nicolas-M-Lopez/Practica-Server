<h2>Esta seguro que desea cerrar la sesion?</h2>
<button id="logoutBtn" class="btn btn-danger">Cerrar sesion {{email}}</button>

<script>

  const logoutBtn = document.getElementById('logoutBtn')
 const email = "{{email}}"
 
logoutBtn.addEventListener('click', async () => {
  try {
    const response = await fetch('/api/auth/signout', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify({email}), 
    });
    const data = await response.json()
    console.log(data)
    if (data.success) {
      alert('Usario desconectado')
      window.location.href = '/'
    } else {
      console.log('hola')
      alert(data.message)
    }
  } catch (error) {
    alert('Error:', error)
  }
})

</script>